@model PhotoAlbums.Web.ViewModels.AlbumViewModel

@{
    ViewBag.Title = Model.Album.Title;
}

<div class="container main-container shadow">
    <section id="header" class="jumbotron">
        <h1 class="display-3">@Model.Album.Title</h1>
        <h2 class="display-5">by @Model.Album.User.Name</h2>
    </section>

    <div class="container px-5 py-4">
        <div class="row row-cols-2 row-cols-lg-3 row-cols-xl-4 mt-3">
            @foreach (var photo in Model.Photos)
            {
                <div class="col mb-4">
                    <div class="card h-100">
                        <img src="@photo.ThumbnailUrl" class="card-img-top" alt="@photo.Title thumbnail" />
                        <div class="card-body">
                            <h5 class="card-title">@photo.Title</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
